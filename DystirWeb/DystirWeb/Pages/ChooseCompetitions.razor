<div class="row flex-row flex-nowrap overflow-auto">
    @foreach (var competition in CompetitionsList ?? new List<string>())
    {
        <div class="col-3 selected_tab-layout tab @(SelectedCompetition == competition ? "selected_tab" : "")" @onclick="(() => SelectCompetition(competition))">
            @competition
        </div>
    }
</div>

@code {
    [Parameter]
    public EventCallback<string> CompetitionsOnClick { get; set; }

    [Parameter]
    public List<string> CompetitionsList { get; set; }

    [Parameter]
    public string SelectedCompetition { get; set; }

    private void SelectCompetition(string competition)
    {
        SelectedCompetition = competition;
        CompetitionsOnClick.InvokeAsync(competition);
    }
}
