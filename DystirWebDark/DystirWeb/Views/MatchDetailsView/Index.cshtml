@using DystirWeb.ModelViews
@model FullMatchDetailsModelView

@{
    ViewData["Title"] = (Model.MatchDetails.Match.HomeTeam + " " + Model.MatchDetails.Match.HomeCategoriesName + " " + Model.MatchDetails.Match.HomeSquadName).Trim() + " - " + (Model.MatchDetails.Match.AwayTeam + " " + Model.MatchDetails.Match.AwayCategoriesName + " " + Model.MatchDetails.Match.AwaySquadName).Trim();
    ViewData["PageIndex"] = 5;
    ViewData["SelectedMatchID"] = Model.MatchDetails.Match.MatchId;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

