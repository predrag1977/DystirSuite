<Project Sdk="Microsoft.NET.Sdk.Web">
  
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(RunConfiguration)' == 'DystirWeb' " />
  <ItemGroup>
    <None Remove="InfoShareWebSite\" />
    <None Remove="Quick.AspNetCore.Components.Web.Extensions" />
    <None Remove="PagesMobileClient\" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Shared\MainLayout.razor" />
    <None Include="Shared\NavMenu.razor" />
    <None Include="wwwroot\css\bootstrap\bootstrap.min.css.map" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="3.2.1" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Build" Version="3.2.1" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="3.2.1" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="5.0.9" />
    <PackageReference Include="System.Net.Http.Json" Version="3.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Shared\DystirWeb.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="PagesShareWebSite\" />
    <Folder Include="PagesMobileClient\" />
  </ItemGroup>
</Project>
