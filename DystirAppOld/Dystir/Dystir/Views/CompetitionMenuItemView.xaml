<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dystir.Views.CompetitionMenuItemView">

    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="Micro" />
            <Setter Property="TextColor" Value="Black" />
        </Style>
    </ContentView.Resources>

    <ContentView.Content>
        <Grid WidthRequest="97" BackgroundColor="Transparent" Padding="2,5" >
            <Label x:Name="CompetitionNameLabel" MaxLines="3"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" FontSize="10" FontFamily="{StaticResource BoldFont}" Text="{Binding}" />
        </Grid>
    </ContentView.Content>

</ContentView>