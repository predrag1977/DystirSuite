<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#374E32"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="true"
    NavigationPage.HasNavigationBar="False"
    x:Class="Dystir.Views.DystirWebViewPage">

    <ContentPage.Content>
        <StackLayout BackgroundColor="#181818">
            <WebView x:Name="DystirWebView"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Navigated="OnNavigated"
                     BackgroundColor="#181818"/>
            <Button x:Name="RefreshButton" IsVisible="false" Text="REFRESH" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
