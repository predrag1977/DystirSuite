<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dystir.Views.DetailMenuItem"
             x:Name="MenuItem">
  <ContentView.Content>
        <ContentView BackgroundColor="DarkGreen" Padding="0" HorizontalOptions="FillAndExpand" Margin="0">
            <StackLayout x:Name="DetailMenuItemPanel" VerticalOptions="FillAndExpand">
                <Label x:Name="MenuTextLabel" Text="{Binding}" FontFamily="{StaticResource BoldFont}" VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </ContentView>
  </ContentView.Content>
</ContentView>