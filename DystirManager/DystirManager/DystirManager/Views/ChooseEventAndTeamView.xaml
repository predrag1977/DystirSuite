<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DystirManager.Views.ChooseEventAndTeamView"
             xmlns:converter="clr-namespace:DystirManager.Converter"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             NavigationPage.HasNavigationBar="False"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms">
    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource NormalFont}"/>
            <Setter Property="FontSize" Value="12" />
        </Style>
        <converter:LanguageConverter x:Key="LanguageConverter" />
    </ContentView.Resources>

    <Grid  Margin="5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Picker x:Name="TeamsPickerList" ItemsSource="{Binding TeamsList}" TextColor="White" BackgroundColor="DimGray" SelectedItem="{Binding EventTeam, Mode=TwoWay}"  SelectedIndexChanged="TeamsPickerList_SelectedIndexChanged" >
        </Picker>
    </Grid>
</ContentView>