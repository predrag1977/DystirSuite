<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DystirManager.Views.CompetitionMenuItemView">

    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="9" />
            <Setter Property="TextColor" Value="Black" />
        </Style>
    </ContentView.Resources>

    <ContentView.Content>
        <Grid RowSpacing="0" WidthRequest="120" Padding="5,18" VerticalOptions="Center">
            <Label x:Name="CompetitionNameLabel" VerticalOptions="Center" FontSize="10" FontFamily="{StaticResource BoldFont}" Text="{Binding}" />
        </Grid>
    </ContentView.Content>

</ContentView>